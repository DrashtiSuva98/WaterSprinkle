<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:id="@+id/custrel">

            <TextView
                android:id="@+id/cust_single_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Display Name"
                android:textSize="20dp"
                android:textColor="#000000"></TextView>

            <TextView
                android:id="@+id/cust_single_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="User Address"
                android:textSize="17dp"
                android:layout_below="@+id/cust_single_name"
                />

            <CheckBox
                android:id="@+id/chkcust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cust_single_name"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:clickable="false"
                android:visibility="invisible"
                android:gravity="end|right|center"
                />

        </RelativeLayout>


        </androidx.cardview.widget.CardView>
</RelativeLayout>